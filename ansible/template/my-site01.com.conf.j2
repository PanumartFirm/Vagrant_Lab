NameVirtualHost *:80
<VirtualHost *:80>
    ServerName my-site.com
    ServerAlias my-site.com
    DocumentRoot /var/nfs/www/my-site.com/html
    <Directory /var/nfs/www/my-site.com/html>
        Options -Indexes +FollowSymLinks +MultiViews
        AllowOverride All
        Require all granted
    </Directory>
    ErrorLog /var/nfs/www/my-site.com/log/error.log
    CustomLog "| /bin/sh -c '/usr/bin/tee -a /var/nfs/www/my-site.com/log/requests.log | /usr/bin/logger -thttpd_mysite -plocal1.notice'" combined
</VirtualHost>